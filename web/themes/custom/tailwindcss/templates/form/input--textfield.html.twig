{#
/**
* @file
* Default theme implementation for an 'input' #type form element.
*
* Available variables:
* - attributes: A list of HTML attributes for the input element.
* - children: Optional additional rendered elements.
*
* @see template_preprocess_input()
*
* @ingroup themeable
*/
#}
{%
set classes = [
    'tw-mt-1',
    'tw-form-input',
    'tw-block',
    'tw-w-full',
    'tw-py-2',
    'tw-px-3',
    'tw-border',
    'tw-border-gray-300',
    'tw-rounded-md',
    'tw-shadow-sm',
    'tw-focus:outline-none',
    'tw-focus:shadow-outline-blue',
    'tw-focus:border-blue-300',
    'tw-transition',
    'tw-duration-150',
    'tw-ease-in-out',
    'tw-sm:text-sm',
    'tw-sm:leading-5'
]
%}

<input{{ attributes.addClass(classes) }} />{{ children }}
